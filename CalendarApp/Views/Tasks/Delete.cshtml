@model DotNetCoreSqlDb.Models.Task

@{
    ViewData["Title"] = "Delete";
}

<h1 class="h3">Are you sure you want to delete this?</h1>

<h2 class="h4">@Model.Resource.Name - @Model.Date.ToString("yyyy-MM-dd")</h2>

<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TaskColor)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TaskColor)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" name="Team" value="@ViewBag.Team" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-controller="Calendar" asp-action="Index" asp-route-team="@Model.Resource.Team">Back to Calendar</a>
    </form>
</div>
